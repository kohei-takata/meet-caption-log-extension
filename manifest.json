{
  "manifest_version": 3,
  "name": "Meet Captions Logger",
  "version": "1.0",
  "description": "Google Meetの会議中に表示される字幕を保存します",
  "icons": {
    "48": "icon/icon.png"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"]
    }
  ]
}
